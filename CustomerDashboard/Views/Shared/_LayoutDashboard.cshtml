<!DOCTYPE html> 
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/fontawesome/js/all.min.js"></script>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

</head>
<body>
    <div class="d-flex" style="min-height:100vh;">
        <!-- Left Side Navigation -->
        <nav class="bg-light border-end" style="width:250px;">
            <div class="p-3">
                <h4>Dashboard</h4>
                <ul class="nav flex-column" id="sidebarMenu">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index" data-page="Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profile/Index" data-page="Profile/Index">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Goals/Index" data-page="Goals/Index">Goals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Filters/Index" data-page="Filters/Index">Filters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Categories/Index" data-page="Categories/Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Transactions/Index" data-page="Transactions/Index">Transactions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Summary/Index" data-page="Summary/Index">Summary</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Trends/Index" data-page="Trends/Index">Trends</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Right Content -->
        <div class="flex-fill p-3" id="mainContent">
            @RenderBody()
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#sidebarMenu a.nav-link').click(function (e) {
                e.preventDefault();
                const pageUrl = $(this).attr('href'); 

                $('#sidebarMenu a.nav-link').removeClass('active');
                $(this).addClass('active');
                 
                $('#mainContent').load(pageUrl);
            });
        });
    </script>
</body>
</html>
