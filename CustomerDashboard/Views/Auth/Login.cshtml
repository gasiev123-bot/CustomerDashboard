@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        .gradient-custom-2 {
            background: linear-gradient(to right, #6a11cb, #2575fc);
        }
    </style>

    <script>
        window.onload = function () {
            document.querySelector('input[name="email"]').value = '';
            document.querySelector('input[name="password"]').value = '';
        };
    </script>
</head>
<body>

    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">

                            <!-- Left Panel -->
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                             style="width: 185px;" alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">Welcome Back</h4>
                                    </div>

                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.Error</div>
                                    }

                                    <form method="post" action="/Auth/Login">
                                        <p>Please login to your account</p>

                                        <div class="form-outline mb-4">
                                            <input type="email" name="email" class="form-control" required placeholder="Email address" />
                                            
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" name="password" class="form-control" required placeholder="Password" />
                                            
                                        </div>

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                                Log in
                                            </button>
                                        </div>
                                    </form>

                                </div>
                            </div>

                            <!-- Right Panel -->
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a dashboard</h4>
                                    <p class="small mb-0">
                                        You can put branding, marketing text, or user onboarding content here.
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
